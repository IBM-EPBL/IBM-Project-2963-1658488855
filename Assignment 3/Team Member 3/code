x = input("Enter value: ")
stop_light = int(x)
while True:
    if stop_light >= 1 and stop_light < 10:
        print('Green light and vehicle can move now!!!!')
        
        stop_light += 1
    elif stop_light < 20:
        print('Yellow light and vehicle should wait!!!!')
        stop_light += 1
    elif stop_light < 30:
        print("Red light and vehicle stop moving!!!!")
        stop_light += 1
    else:
        stop_light = 0
    break
